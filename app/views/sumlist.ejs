<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Sumlist</title>
    <link,for rel="stylesheet" href="/css/css2.css">
  </head>
  <body>
    <div>
      <table>
           <% for(var i = 0; i <= list.length; i++){ %>
           <% var color = (list[i]%2) ? odd : even %>
        <tr> 
             <td style="color:<%color%>">
              <%=  list[i] %>
            </td>
        </tr>
        <% } %>
        <tr>
          <td><%= sum %></td>
        </tr>
      </table>
    </div>
  </body>
